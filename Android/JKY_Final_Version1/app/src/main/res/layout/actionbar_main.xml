<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_actB_discover"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@drawable/sel_img_bt_discover"
        android:longClickable="true"
        android:src="@drawable/actionbar_discover_normal" />

    <ImageView
        android:id="@+id/img_actB_music"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@drawable/sel_img_bt_music"
        android:longClickable="true"

        android:src="@drawable/actionbar_music_normal" />

    <ImageView
        android:id="@+id/img_actB_firends"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@drawable/sel_img_bt_friend"
        android:longClickable="true"
        android:src="@drawable/actionbar_friends_normal" />



</LinearLayout>
